{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "types": ["node"],
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "baseUrl": "./src"
  },
  "include": ["src"]
}
